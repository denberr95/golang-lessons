{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch App",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "--config-file-name=config.default",
                "--config-file-type=yaml",
                "--config-file-path=."
            ],
            "buildFlags": [
                "-ldflags",
                "-X main.AppName=golang-lessons -X main.Version=1.0.0 -X main.Commit=dev -X main.BuildTime=manual"
            ],
            "env": {
                "GIN_MODE": "debug",
            },
            "preLaunchTask": "go-mod-tidy"
        }
    ]
}